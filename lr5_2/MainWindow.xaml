<Window x:Class="lr5_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lr5_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Width="176" Background="White" OpacityMask="Black" Click="StartClick"/>
        <TextBox x:Name="threadCountTextBox" HorizontalAlignment="Left" Margin="431,26,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="57"/>
        <TextBlock x:Name="threadNumberBlock" HorizontalAlignment="Left" Margin="312,27,0,0" TextWrapping="Wrap" Text="Number of threads:" VerticalAlignment="Top"/>
        <ListBox x:Name="threadStatusList" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="174,100,174,10"/>
    </Grid>
</Window>
